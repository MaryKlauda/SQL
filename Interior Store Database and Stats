INSERT INTO merchandise VALUES (15, "Cabinets", 500, 10, 4, 100);

--Display the database from merchandise ordered by price
SELECT * FROM merchandise WHERE price ORDER BY price;

--Display the database from merchandise delivery price more than $50
SELECT * FROM merchandise WHERE delivery > 50;

--Display the database from merchandise quanity more than 100
SELECT * FROM merchandise WHERE quanity > 100;

--Display the database from merchandise price more than $200 and delivery more than $50
/* AND */
SELECT * FROM merchandise WHERE price > 200 AND delivery > 50;
